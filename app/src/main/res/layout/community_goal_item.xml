<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view_community_goal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="@dimen/goal_card_size"
        android:layout_height="@dimen/goal_card_size">

        <ImageView
            android:id="@+id/community_goal_photo"
            android:layout_width="@dimen/goal_card_size"
            android:layout_height="@dimen/goal_card_size"
            android:contentDescription="@string/goal_photo_description"
            android:scaleType="centerCrop"
            android:src="@drawable/loading"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="@dimen/goal_card_size"
            android:layout_height="@dimen/goal_card_size"
            android:background="#20000000"/>

        <TextView
            android:id="@+id/community_goal_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/goal_card_title_text_size"
            android:text="@string/test"
            android:textColor="#ffffff"
            android:background="#80000000"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:gravity="center_horizontal"/>

        <TextView
            android:id="@+id/community_goal_people"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/goal_card_people_text_size"
            android:text="@string/test"
            android:textColor="#ffffff"
            android:background="#80000000"
            android:padding="8dp"
            android:gravity="end|bottom"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>